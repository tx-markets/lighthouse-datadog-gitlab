{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint",
    "prettier",
    "sonarjs",
    "jest"
  ],
  "env": {
    "es6": true,
    "node": true,
    "jest/globals": true
  },
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "eslint:recommended",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": ["error", { "singleQuote": true, "trailingComma": "none" }],
    "max-len": ["error", 120]
  }
}
